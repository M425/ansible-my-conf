[user]
  name = Matteo Caruso
  email = m.caruso425@gmail.com

[core]
  editor = vim

[alias]
  l = log -18 --color=always --all --topo-order --pretty='format:%ai %Cgreen%h%Creset %s%Cred%d%Creset %C(black bold)(by %an)%Creset'
  ll = log     --color=always --all --topo-order --pretty='format:%ai %Cgreen%h%Creset %s%Cred%d%Creset %C(black bold)(by %an)%Creset'
  gl = log -12 --color=always --all --graph --topo-order --pretty='format:%ai %Cgreen%h%Creset %s %C(black bold)(by %an)%Creset%C(yellow bold)%d%Creset%n'
  gll = log --color=always --all --graph --topo-order --pretty='format:%ai %Cgreen%h%Creset %s %C(black bold)(%cr by %an)%Creset%C(yellow bold)%d%Creset%n'

  tags = tag -l
  branches = branch -a
  remotes = remote -v

  stat = status
  st = status
  s = status

  c = commit
  cm = commit -m

  currentbranch = rev-parse --abbrev-ref HEAD

[push]
  default = matching

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
